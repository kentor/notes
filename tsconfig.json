{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["DOM", "ES2023"],
    "paths": {
      "App/*": ["src/js/*"]
    },
    "pretty": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/js"]
}
